<%- layout('layouts/main.ejs') %>
<div class="card card-body">
        <div class="container">
                <div class="row">
                        <div class="jumbotron" style="height: 368px;margin-top: 22px;">
                  <img  src="/styles/img/view.png" title="Opening Details" style="margin-left: 30px;">
                
                  <h2 style="margin-top: 30px;">Opening Details</h2>
                  </div>
              
                  <div style="width: 30%; margin: 25px auto;">
                 
                        <div class="form-group" >
                           
                              <label  class="form-control" type="text" placeholder="Project" name="project">
                                      <%= opening.project %>
                              </label>
      
                            </div>

                                   
                        <div class="form-group" >
                                
                                   <label  class="form-control" type="text" placeholder="Client" name="client">
                                           <%= opening.client %>
                                   </label>
           
                                 </div>

                                <div class="form-group" >
                                        
                                           <label  class="form-control" type="text" placeholder="Technologies" name="technologies">
                                                   <%= opening.technologies %>
                                           </label>
                   
                                         </div>         

                      <div class="form-group" >
                          <input class="form-control" type="text" placeholder="id" name="id" value="<%= opening._id %>" style="display:none">
                        <label  class="form-control" type="text" placeholder="Role" name="title">
                                <%= opening.title %>
                        </label>

                      </div>
                      <div class="form-group">
                            <label class="form-control" type="text" placeholder="desc" name="desc">
                                    <%= opening.desc %>
                            </label>
                      </div>
                      <a  href="/openingsList">
                      <div class="form-group">
                        <button class="btn btn-large btn-primary btn-block">Back</button>
                      </div>
                      </a>
              
                   
                  </div>
                </div>
              
              </div>
</div>